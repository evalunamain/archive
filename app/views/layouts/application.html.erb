<!DOCTYPE html>
<html>
<head>
  <title>News Reader</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if signed_in? %>
<%= current_user.username.capitalize %>
<%= button_to "Log Out", api_session_url, method: :delete %>
<% end %>

<%= yield %>

</body>
</html>
