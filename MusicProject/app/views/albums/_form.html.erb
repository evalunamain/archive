<% action_url = (action == :new ? albums_url : album_url(@album)) %>

<form action="<%= action_url %>" method="post">
  <%= auth_token %>
  <% if action == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
<label for="album_title">Album Title</label>
<input type="text"
        name="album[title]"
        value="<%= @album.title %>"
        id="album_title">
<br>
<label for="Band">Band</label>
  <select name="album[band_id]" id="Band">
  <option></option>
  <% @bands.each do |band| %>
    <option value= <%= band.id %>
      <%="selected" if band.id == @album.band_id %>>
          <%= band.name %>
    </option>
  <% end %>
  </select>
  <br>

<input type="radio" name="album[recording_type]" id="live_recording" value="Live"
  <%= "checked" if @album.recording_type == "Live" %>>
  <label for="live_recording">Live recording</label>
<input type="radio" name="album[recording_type]" id="studio_recording" value="Studio"
  <%= "checked" if @album.recording_type == "Studio" %>>
  <label for="studio_recording">Studio recording</label>
  <br>
  <input type="submit" name ="Submit">
</form>
